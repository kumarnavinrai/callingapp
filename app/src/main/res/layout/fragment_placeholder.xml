<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/appImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/dhasslogomodified"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:contentDescription="App Icon"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upper Limit"
        android:textColor="#0f2d49"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/upperLimitEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter upper limit"
        android:inputType="numberDecimal"
        android:textSize="16sp"
        android:backgroundTint="#0f2d49"
        android:padding="10dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lower Limit"
        android:textColor="#0f2d49"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/lowerLimitEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter lower limit"
        android:inputType="numberDecimal"
        android:textSize="16sp"
        android:backgroundTint="#0f2d49"
        android:padding="10dp"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="#0f2d49"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">


    <ImageView
        android:id="@+id/appImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/dhasslogomodified"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:contentDescription="App Icon"/>

    <TextView
        android:id="@+id/chargingPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Level: 0%"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/appImage"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/chargingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Charging"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/chargingPercentage"
        android:layout_marginTop="28dp"/>
    <Button
        android:id="@+id/turnOnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn On Charging"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/chargingStatus"
        android:backgroundTint="#0f2d49"
        android:layout_marginTop="142dp"/>

    <Button
        android:id="@+id/turnOffButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn Off Charging"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#0f2d49"
        android:layout_below="@id/turnOnButton"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/upperLimitDisp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/turnOffButton"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="28dp"
        android:text="Max: 0%"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lowerLimitDisp"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/turnOffButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="240dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="28dp"
        android:text="Min: 0%"
        android:textSize="22sp"
        android:textStyle="bold" />

</RelativeLayout>